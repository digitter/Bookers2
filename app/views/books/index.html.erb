<div class="container">
  <div class="row">

		<%= render 'users/info',user: current_user, book: @book %>

    <div class="col-xs-9">
      <% if @book.errors.any? %>
        <h2 style="color: red;">
          <%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:
        </h2>
        <% @book.errors.full_messages.each do |msg| %>
          <li style="color: red;"><%= msg %></li>
        <% end %>
      <% end %>

      <h2>Books</h2>
      <table class="table">
        <thead>
          <th colspan="1"></th> <th>Title</th> <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%# <%= link_to user_path(book.user.id) do %>
              <%= link_to "/users/#{book.user.id}" do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg", size:'50x50' %>
              <% end %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
