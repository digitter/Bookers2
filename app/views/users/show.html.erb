<div class="container">
  <div class="row">

    <%= render  "users/info", user: current_user, book: @book %>

    <div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<th colspan="1"></th> <th>Title</th> <th>Opinion</th>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg", size:'50x50' %>
								<% end %>
							</td>
							<td><%= link_to book.title,book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
  </div>
</div>
